.container
  .row-fluid
    .hero-unit.text-center{style: "margin-left: 100px; margin-right: 100px;"}
      = image_tag("gabstr-logo.png")
      %br
      Sign in to the Gabstr CRM system below
      .sign-in-div
        = minimal_form_for(resource, :as => resource_name, :url => session_path(resource_name), html: { class: 'form-horizontal'}) do |f|
          .form-inputs
            = f.input :email, :required => false, :autofocus => true
            = f.input :password, :required => false
            =# f.input :remember_me, :as => :boolean if devise_mapping.rememberable?
            .submit-button
              = f.submit "Sign in", class: "btn btn-primary"