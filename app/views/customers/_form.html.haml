= simple_form_for(@customer) do |f|
  = f.error_notification

  .form-inputs
    = f.input :company_name
    = f.input :address
    = f.input :city, :input_html => { :value => 'San Francisco'}
    = f.input :state, :input_html => { :value => 'CA'}
    = f.input :zip
    = f.input :location, input_html: { value: 'USA' }
    = f.input :primary_contact_person
    = f.input :phone
    = f.input :email
    = f.input :facebook
    = f.input :twitter_handle
    = f.input :gabstr_handle
    = f.input :notes, :input_html => {:rows => 7}
    = f.input :visited

  .form-actions
    = f.button :submit, class: "btn btn-primary"